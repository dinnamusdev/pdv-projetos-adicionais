    private void btEditarFormaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btEditarFormaActionPerformed
        
        if(txtDescricao.getText().trim().length()==0){
            MetodosUI_Auxiliares.MensagemAoUsuarioSimplesAVISO(null, "O CAMPO DESCRICAO NÃO PODE SER VAZIO", lblTitulo.getText());
            return ;
        }
        if(txtDescricao.getText().trim().length()>15){
            MetodosUI_Auxiliares.MensagemAoUsuarioSimplesAVISO(null, "O CAMPO DESCRICAO NÃO PODE SER MAIOR QUE 15(QUINZE) CARACTERES", lblTitulo.getText());
            return ;
        }
        if(!opNaoVinculado.isSelected() && !opVinculado.isSelected()){
           MetodosUI_Auxiliares.MensagemAoUsuarioSimplesAVISO(null, "ESCOLHA O TIPO DE PAGAMENTO", lblTitulo.getText());
           return;
        }
        OK=true;
        dispose(); 
        
        
    }//GEN-LAST:event_btEditarFormaActionPerformed

